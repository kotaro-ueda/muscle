%p#notice= notice
.date-title
  .date-title-write
    %h1 
      =current_user.name
      の予定表
  = link_to new_blog_path do
    =fa_icon 'plus',class:'plus'
%table
  %thead
    %tr
      .title-time
        タイトル/時間
      %th{:colspan => "3"}
  %tbody
    - @blogs.each do |blog|
      %tr
        %td= blog.title
        %td= blog.start_time.strftime("%Y-%m-%d %H:%M")
        %td= link_to 'Show', blog
        %td= link_to 'Edit', edit_blog_path(blog.id)
        %td= link_to 'Destroy',blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' }
%br/
= month_calendar events: @blogs do |date, blogs|
  = date.day
  - blogs.each do |blog|
    %div
      = link_to blog.title, blog
